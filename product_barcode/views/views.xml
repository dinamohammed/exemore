<odoo>
  <data>
      <record id="view_template_product_id_form" model="ir.ui.view">
            <field name="name">product.template.id.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/div[1]" position="after">
                    <div>
                        <label for="id"/>
                        <field name="id" readonly="1"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='sale_ok']" position="before">
                    <field name="product_ref" readonly="1"/>
                </xpath>
          </field>
      </record>
      
      <record id="view_product_product_id_form" model="ir.ui.view">
            <field name="name">product.product.id.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/div[1]" position="after">
                    <div>
                        <label for="id"/>
                        <field name="id" readonly="1"/>
                    </div>
                </xpath>
          </field>
      </record>
      
      <record id="view_partner_vendor_id_form" model="ir.ui.view">
            <field name="name">res.partner.id.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/div[1]" position="after">
                    <div>
                        <label for="id"/>
                        <field name="id" readonly="1"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='phone']" position="before">
                    <field name="vendor_ref" readonly="1"/>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="before">
                    <field name="customer_rank"/>
                </xpath>
                <xpath expr="//field[@name='property_supplier_payment_term_id']" position="before">
                    <field name="supplier_rank"/>
                </xpath>
          </field>
      </record>
   
  </data>
</odoo>
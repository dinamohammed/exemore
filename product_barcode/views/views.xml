<odoo>
  <data>
      <record id="view_template_product_id_form" model="ir.ui.view">
            <field name="name">product.template.id.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='purchase_ok']" position="after">
                    <field name="id" readonly="1"/>
                </xpath>
          </field>
      </record>
      
      <record id="view_product_product_id_form" model="ir.ui.view">
            <field name="name">product.product.id.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='purchase_ok']" position="after">
                    <field name="id" readonly="1"/>
                </xpath>
          </field>
      </record>
      
      <record id="view_partner_vendor_id_form" model="ir.ui.view">
            <field name="name">res.partner.id.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="id" readonly="1"/>
                </xpath>
          </field>
      </record>
   
  </data>
</odoo>
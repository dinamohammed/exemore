<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record model="ir.module.category" id="module_category_expenses_module">
            <field name="name">Expenses</field>
            <field name="description">Helps you manage Expenses users.</field>
            <field name="sequence">9</field>
        </record>

        <record id="group_expenses_user" model="res.groups">
            <field name="name">User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="expenses_module.module_category_expenses_module"/>
        </record>
        
        <record id="group_expenses_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="expenses_module.module_category_expenses_module"/>
            <field name="implied_ids" eval="[(4, ref('group_expenses_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

    </data>
</odoo>